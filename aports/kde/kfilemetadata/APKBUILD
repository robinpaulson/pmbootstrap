pkgname=kfilemetadata
pkgver=5.37.0
pkgrel=1
pkgdesc="A library for extracting file metadata"
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules python qt5-qttools-dev attr-dev doxygen ki18n-dev ffmpeg-dev
			exiv2-dev taglib-dev karchive-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

prepare() {
	mkdir $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="${pkgdir}" install
}

sha512sums="78143c82b858f53e63e35e11e144ccb474574885bd772ff27131c0568d5033618f8ff75844b02e3e3acbffd5d8901300f26f5b4e9d5556f2400f3666183b2899  kfilemetadata-5.37.0.tar.xz"
