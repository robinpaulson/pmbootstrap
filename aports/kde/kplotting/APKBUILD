pkgname=kplotting
pkgver=5.37.0
pkgrel=1
pkgdesc='Lightweight plotting framework'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules mesa-dev doxygen qt5-qtbase qt5-qttools-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

prepare() {
	mkdir -p $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="${pkgdir}" install
}

sha512sums="7556d20333834568298ce66b9ce9b6aa0f2a09650552cba1482e8c534e1fd8a591faba7d6cbe7159173bf986934a8f9d4f35d81e29e15477cec01bc2995bed99  kplotting-5.37.0.tar.xz"
